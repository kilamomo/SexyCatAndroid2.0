<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sexycat.android.com.sexycatandroid20" >

    <application
        android:name=".common.SexCatApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!--启动界面-->
        <activity
            android:name="sexycat.android.com.sexycatandroid20.activity.LoadingActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--主界面-->
        <activity
            android:name="sexycat.android.com.sexycatandroid20.activity.MainActivity" >
        </activity>
        <!--注册界面-->
        <activity
            android:name="sexycat.android.com.sexycatandroid20.activity.RegisterActivity" >
        </activity>
        <!--分类商品列表界面-->
        <activity
            android:name="sexycat.android.com.sexycatandroid20.activity.ClassificationDetailsListActivity"
            android:launchMode="singleTask"
            >
        </activity>
        <!--分类商品详情界面-->
        <activity
            android:name="sexycat.android.com.sexycatandroid20.activity.GoodDetailsActivity" >
        </activity>
    </application>

</manifest>
