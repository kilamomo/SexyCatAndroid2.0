<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_main_dialog_searchtag_top_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/activity_main_dialog_searchtag_search_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/activity_main_dialog_searchtag_function_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功能"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <include
        android:id="@+id/titleLayout"
        layout="@layout/include_searchtag_hotspot" />
    <include
        android:id="@+id/titleLayout"
        layout="@layout/include_searchtag_hotspot_listview"
        />
</RelativeLayout>